<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/previous" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bookmark_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bookmark" />

            <TextView
                android:id="@+id/bookmark_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/current_character_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/current_character_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/character_dog"
            android:layout_marginEnd="20dp"
            android:background="@drawable/character_background"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강아지"
                android:textSize="36sp"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/current_character_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강아지 강아지"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/current_character_info"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/character_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
